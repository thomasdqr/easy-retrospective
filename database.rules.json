{
  "rules": {
    "sessions": {
      "$sessionId": {
        "isRevealed": {
          ".read": true,
          ".write": true,
          ".validate": "newData.isBoolean()"
        },
        "votingPhase": {
          ".read": true,
          ".write": true,
          ".validate": "newData.isBoolean()"
        },
        "timer": {
          ".read": true,
          ".write": true,
          ".validate": "newData.hasChildren(['timeLeft', 'isRunning']) && newData.child('timeLeft').isNumber() && newData.child('isRunning').isBoolean()"
        },
        "icebreaker": {
          ".read": true,
          ".write": true,
          "users": {
            "$userId": {
              ".validate": "newData.hasChildren(['statements', 'hasSubmitted']) && newData.child('hasSubmitted').isBoolean() && newData.child('statements').hasChildren() && newData.child('statements').hasChildren(['0', '1', '2']) && newData.child('statements/0').hasChildren(['text', 'isLie', 'revealed']) && newData.child('statements/1').hasChildren(['text', 'isLie', 'revealed']) && newData.child('statements/2').hasChildren(['text', 'isLie', 'revealed'])"
            }
          },
          "activeUser": {
            ".validate": "newData.isString() || newData.val() == null"
          },
          "revealed": {
            ".validate": "newData.isBoolean() || newData.val() == null"
          },
          "completed": {
            ".validate": "newData.isBoolean() || newData.val() == null"
          },
          "finalLeaderboard": {
            ".validate": "newData.isBoolean() || newData.val() == null"
          }
        }
      }
    },
    "columns": {
      "$sessionId": {
        ".read": true,
        ".write": true,
        "$columnId": {
          ".validate": "newData.hasChildren(['id', 'title', 'color', 'position']) && newData.child('id').isString() && newData.child('title').isString() && newData.child('color').isString() && newData.child('position').hasChildren(['x', 'width']) && newData.child('position/x').isNumber() && newData.child('position/width').isNumber()"
        }
      }
    },
    "stickyNotes": {
      "$sessionId": {
        ".read": true,
        "$noteId": {
          ".write": true,
          ".validate": "newData.hasChildren(['id', 'content', 'authorId', 'position', 'color']) && newData.child('id').isString() && newData.child('content').isString() && newData.child('authorId').isString() && newData.child('position').hasChildren(['x', 'y']) && newData.child('position/x').isNumber() && newData.child('position/y').isNumber() && newData.child('color').isString()",
          "votes": {
            ".read": true,
            ".write": true,
            "$userId": {
              ".validate": "newData.isBoolean() || newData.val() == null"
            }
          }
        }
      }
    },
    "notesPosition": {
      "$sessionId": {
        ".read": true,
        "$noteId": {
          ".write": true,
          ".validate": "newData.hasChildren(['x', 'y']) && newData.child('x').isNumber() && newData.child('y').isNumber()"
        }
      }
    },
    "notesMoving": {
      "$sessionId": {
        ".read": true,
        "$noteId": {
          ".write": true,
          ".validate": "newData.isString() || newData.val() == null"
        }
      }
    },
    "notesEditing": {
      "$sessionId": {
        ".read": true,
        "$noteId": {
          ".write": true,
          ".validate": "newData.isString() || newData.val() == null"
        }
      }
    },
    "cursors": {
      "$sessionId": {
        ".read": true,
        "$userId": {
          ".write": true,
          ".validate": "newData.hasChildren(['x', 'y', 'lastUpdate']) && newData.child('x').isNumber() && newData.child('y').isNumber() && newData.child('lastUpdate').isNumber()"
        }
      }
    },
    "drawings": {
      "$sessionId": {
        ".read": true,
        ".write": true,
        "$pathId": {
          ".validate": "newData.hasChildren(['id', 'points', 'color', 'width', 'authorId']) && newData.child('id').isString() && newData.child('color').isString() && newData.child('width').isNumber() && newData.child('authorId').isString() && newData.child('points').hasChildren()"
        }
      }
    }
  }
}